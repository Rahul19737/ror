<div class="card text-center shadow-lg mb-5">
  <div class="card-header">
    <h1>Feedbacks</h1>
  </div>
  <div class="card-body">
    <table class="table table-success table-striped table-hover ">
      <thead>
        <tr>
          <th>Feedback</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
        <% @feedbacks.each do |feedback| %>
          <tr>
            <td><%= feedback.feedback %></td>
            <td><%= link_to 'Show', feedback %></td>
            <td><%= link_to 'Edit', edit_feedback_path(feedback) %></td>
            <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to 'New Feedback', new_feedback_path, class: 'btn btn-success' %>
  </div>
</div>

