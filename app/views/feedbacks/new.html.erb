<div class="card text-center shadow-lg mb-5">
  <div class="card-header text-center">
    <h1>New Feedback</h1>
  </div>
  <div class="card-body">
    <% if guest_signed_in? %>
      <%= render 'mark', feedback: @feedback %>
    <% else %>
      <%= render 'form', feedback: @feedback %>
    <% end %>

    <%= link_to 'Back', feedbacks_path, class:'btn btn-secondary' %>
  </div>
</div>
<br>