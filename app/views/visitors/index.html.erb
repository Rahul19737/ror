<div class="card text-center shadow-lg mb-5">
  <div class="card-header">
    <h1>Visitors</h1>
  </div>
  <div class="card-body">
    <table class="table table-success table-striped table-hover ">
      <thead>
        <tr>
          <th>Checked in</th>
          <th>Name</th>
          <th>Phone number</th>
          <th>Reason of visit</th>
          <th colspan="3"></th>
        </tr>
      </thead>
  
      <tbody>
        <% @visitors.each do |visitor| %>
          <tr>
            <td><%= visitor.created_at %></td>
            <td><%= visitor.name %></td>
            <td><%= visitor.phone_number %></td>
            <td><%= visitor.reason_of_visit %></td>
            <td><%= link_to 'Show', visitor %></td>
            <td><%= link_to 'Edit', edit_visitor_path(visitor) %></td>
            <td><%= link_to 'Destroy', visitor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="card-footer">
    <%= link_to 'Mark Entry', new_visitor_path, class: 'btn btn-success'%>
  </div>
</div>

